<div class="page-header">
  <h1>
    Projects
    <%= link_to fa_icon('plus') + ' New Project', new_admin_project_path, class: 'btn btn-success' %>
  </h1>
</div>

<div id="projects">
  <% @projects.each do |project| %>
    <h2><%= link_to project.name, project %></h2>
    <p><%= project.description %></p>
  <% end %>
</div>